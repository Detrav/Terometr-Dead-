<Window x:Class="Teroniffer.Windows.InitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки соединений"
        Height="250"
        Width="300"
        ResizeMode="NoResize">
    <DockPanel>
        <Label DockPanel.Dock="Top">Выбирите устройство захвата:</Label>
        <ComboBox DockPanel.Dock="Top"
                  x:Name="listBoxDevices"></ComboBox>
        <Label DockPanel.Dock="Top">Выбирите сервер:</Label>
        <ComboBox DockPanel.Dock="Top"
                  x:Name="listBoxServers"></ComboBox>
        <DockPanel DockPanel.Dock="Bottom"
                   Height="24"
                   VerticalAlignment="Bottom">
            <Button x:Name="buttonOk"
                    DockPanel.Dock="Left"
                    Width="60" Click="buttonOk_Click">OK</Button>
            <Button x:Name="buttonCansel"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Width="60"
                    Click="buttonCansel_Click">Отмена</Button>
        </DockPanel>
    </DockPanel>
</Window>
